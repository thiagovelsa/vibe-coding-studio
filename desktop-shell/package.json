{
  "name": "vibe-coding-studio",
  "productName": "Vibe Coding Studio",
  "version": "0.2.0",
  "description": "Uma IDE inteligente com suporte a agentes de IA",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start": "electron .",
    "dev": "concurrently \"npm run watch\" \"wait-on dist/main.js && electron .\"",
    "make": "electron-forge make",
    "package": "electron-forge package"
  },
  "keywords": [
    "IDE",
    "Coding",
    "AI",
    "Development"
  ],
  "author": "VibeForge",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-rpm": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-forge/maker-zip": "^6.4.2",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "typescript": "^5.3.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Vibe Coding Studio",
        "executableName": "vibe-coding-studio",
        "icon": "assets/icon",
        "extraResource": [
          "assets"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "vibe_coding_studio"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "categories": [
                "Development",
                "IDE"
              ]
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
} 